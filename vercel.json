{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist", 
        "buildCommand": "npm run build" 
      }
    }
  ],
  "framework": "vite",
  "rewrites": [
    { "source": "/api/auth", "destination": "/api/auth.js" },
    { "source": "/api/comments", "destination": "/api/comments.js" },
    { "source": "/api/findMatches", "destination": "/api/findMatches.js" },
    { "source": "/api/generate", "destination": "/api/generate.js" },
    { "source": "/api/likes", "destination": "/api/likes.js" },
    { "source": "/api/posts", "destination": "/api/posts.js" },
    { "source": "/api/upload", "destination": "/api/upload.js" },
    { "source": "/api/users", "destination": "/api/users.js" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
